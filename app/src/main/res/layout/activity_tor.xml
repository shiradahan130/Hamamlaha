<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="#ff0084"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:paddingVertical="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hlogo" />

                <Button
                    android:id="@+id/goBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:backgroundTint="@android:color/transparent"
                    android:fontFamily="@font/asakimboldwebfont"
                    android:text="➜"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff0084"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bnt_day6"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#ff0084"
                android:fontFamily="@font/asakimboldwebfont"
                android:text="יום ו"
                android:textSize="10dp" />

            <Button
                android:id="@+id/bnt_day5"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#ff0084"
                android:fontFamily="@font/asakimboldwebfont"
                android:text="יום ה"
                android:textSize="10dp" />

            <Button
                android:id="@+id/bnt_day4"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#ff0084"
                android:fontFamily="@font/asakimboldwebfont"
                android:text="יום ד"
                android:textSize="10dp" />

            <Button
                android:id="@+id/bnt_day3"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#ff0084"
                android:fontFamily="@font/asakimboldwebfont"
                android:text="יום ג"
                android:textSize="10dp" />

            <Button
                android:id="@+id/bnt_day2"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#ff0084"
                android:fontFamily="@font/asakimboldwebfont"
                android:text="יום ב"
                android:textSize="10dp" />

            <Button
                android:id="@+id/bnt_day1"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#ff0084"
                android:fontFamily="@font/asakimboldwebfont"
                android:text="יום א"
                android:textSize="10dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="24"
            tools:listitem="@layout/item_appointment" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
