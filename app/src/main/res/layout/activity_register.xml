<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.RegisterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal"
            android:orientation="vertical">

            <!-- פס עליון + תמונה -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#ff0084" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/hlogo" />
            </FrameLayout>

            <Button
                android:id="@+id/goBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:layout_gravity="right"
                android:fontFamily="@font/miriwinwebfont"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:text="➜" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/nootaj"
                android:text="הרשמה"
                android:textSize="30sp" />

            <!-- כרטיס מידע -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="פרטים אישיים"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="@font/miriwinwebfont"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="right"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl">

                        <!-- שדה שם פרטי -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/et_register_first_name_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:hint="שם פרטי"
                            android:maxWidth="488dp"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/black"            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_register_first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName"
                                android:textColor="@android:color/black"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- הרווח האוטומטי -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_weight="1"/>

                        <!-- שדה שם משפחה -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/et_register_last_name_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:hint="שם משפחה"
                            android:maxWidth="488dp"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/black"            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_register_last_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName"
                                android:textColor="@android:color/black"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!-- שדה אימייל -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/et_register_email_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="אימייל"
                        android:maxWidth="488dp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/black"            >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_register_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textColor="@android:color/black"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- שדה מספר טלפון -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/et_register_phone_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="מספר טלפון"
                        android:maxWidth="488dp"
                        android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/black"            >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_register_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:textColor="@android:color/black"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- שדה סיסמה -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/et_register_password_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="סיסמה"
                        android:maxWidth="488dp"
                        android:layout_gravity="center"
                        app:endIconMode="password_toggle"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/black"            >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_register_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="@android:color/black"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- כפתור למטה -->
                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#ff0084"
                        android:fontFamily="@font/asakimboldwebfont"
                        android:text="הרשם"
                        android:textColor="@color/black"
                        android:textSize="15pt"/>
                    <!--app:icon="@android:drawable/ic_menu_save"-->


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="160dp"
                android:background="#ff0084" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
